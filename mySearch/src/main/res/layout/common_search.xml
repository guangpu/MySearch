<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <org.angmarch.views.NiceSpinner
        android:id="@+id/ns_item"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/left_corner"
        app:backgroundSelector="@drawable/left_corner" />

    <com.aisidou.mysearch.RegexEditText
        android:id="@+id/cet_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/ns_item"
        android:background="@drawable/right_corner"
        android:gravity="center_vertical" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_search"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_search" />
</RelativeLayout>